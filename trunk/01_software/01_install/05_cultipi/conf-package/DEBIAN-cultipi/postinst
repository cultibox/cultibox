#!/bin/bash

if [ -f /etc/init.d/cultipi ]; then
    update-rc.d cultipi defaults
    /etc/init.d/cultipi restart
fi

if [ -f /etc/cron.daily/cultipi ]; then
    chmod +x /etc/cron.daily/cultipi
fi


if [ "`cat /etc/crontab|grep cultipi`" == "" ]; then
    echo "*/1 *   * * *   root    /etc/init.d/cultipi status >/dev/null; if [ $? -ne 0 ]; then /etc/init.d/cultipi force-reload; fi" >> /etc/crontab
fi


